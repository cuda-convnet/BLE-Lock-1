<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_device_details_ico"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_lock_blue_300_24dp"/>
    <TextView
        android:id="@+id/item_device_details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备名称"
        android:layout_toEndOf="@id/item_device_details_ico"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/item_device_details_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mac地址"
        android:layout_toEndOf="@id/item_device_details_ico"
        android:layout_marginStart="15dp"
        android:layout_below="@id/item_device_details_name" />
    <ImageView
        android:id="@+id/item_device_details_signal"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_signal_cellular_0_bar_blue_300_48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"/>
</RelativeLayout>