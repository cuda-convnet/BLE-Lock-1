<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:longClickable="true"

    android:layout_marginBottom="10dp"
    app:cardCornerRadius="@dimen/corner_radius"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#606060">

        <ImageView
            android:id="@+id/item_device_details_ico"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_lock_blue_300_24dp" />

        <TextView
            android:id="@+id/item_device_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/item_device_details_ico"
            android:text="设备名称"
            android:textSize="22sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/item_device_details_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_device_details_name"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/item_device_details_ico"
            android:text="mac地址"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/item_device_details_signal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_signal_cellular_0_bar_blue_300_48dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
